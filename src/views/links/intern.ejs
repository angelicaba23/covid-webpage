<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/intern/intern.css' />
    <link rel='stylesheet' href='/stylesheets/intern/cards.css' />
    <link rel='stylesheet' href='/stylesheets/intern/interNav.css' />
    <script src="https://kit.fontawesome.com/47abef14b3.js" crossorigin="anonymous"></script>
    <script src="/javascripts/intern.js" crossorigin="anonymous"></script>
    <script defer src="/javascripts/assistant.js" ></script>
</head>

<body>
    <div class="container">
        <%- include('../layouts/interNav') %>

            <div class="cardBox">
                <div class="card">
                    <div>
                        <div class="numbers">  <%= links[links.length-1].idcase %> </div>
                        <div class="cardName">Total patients</div>
                    </div>
                    <div class="iconBox">
                        <i class="fas fa-eye" aria-hidden="true"></i>
                    </div>
                </div>

                <div class="card">
                    <div>
                        <div class="numbers">#Positives Cases</div>
                        <div class="cardName">Positives</div>
                    </div>
                    <div class="iconBox">
                        <div class="user">
                            <i class="fas fa-viruses" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div>
                        <div class="numbers">#Negatives Cases</div>
                        <div class="cardName">Negatives</div>
                    </div>
                    <div class="iconBox">  
                        <i class="fas fa-virus-slash"  aria-hidden="true"></i>   
                    </div>
                </div>
            </div>

            <div class="details">

                <div class="recentCases">
                    <div class="cardHeader">
                        <h2>Filter by</h2>
                    </div>
                    <!--  <%- include('../charts') %>   -->
                    <div class="filterPatients">
                        </br>
                        <h4>ID CASE</h4>
                        <input id="filterIDcase" type="text" class="form-control" name="filterIDcase" placeholder="ID case" autofocus />
                        </br>
                        <h4>NAME</h4>
                        <input id="filterName" type="text" class="form-control" name="filterName" placeholder="name" autofocus />
                        </br>
                        <h4>ID PATIENT</h4>
                        <input id="filterID" type="text" class="form-control" name="filterID" placeholder="ID patient" autofocus />
                    </div>
                </div>

                <div class="recentPatients">
                    <div class="cardHeader">
                        <h2>Recent Pacientes</h2>
                        <a href="/links/intern/patients" class="btn">View All</a>
                    </div>
                    
                    <table>
                        <thead>
                            <tr>
                                <td>ID case</td>
                                <td>Name and LastName</td>
                                <td>Patient status</td>
                                <td>Address home</td>
                                <td>Covid State</td>
                                <td>Last state date</td>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i=0; i<links.length; i++) {%>
    
                                <tr>
                                    <td>
                                        <%= links[i].idcase %>
                                    </td>
                                    <td>
                                        <%= links[i].name %>
                                            <%= links[i].lastname %>
                                    </td>
                                    <td>
                                        <button class="patientState" style="background: red;">
                                            <a href="/links/intern/patients/<%=links[i].idcase%>" class="patientState"
                                                style="background: red;">Hospital Treatment </a>
                                        </button>
                                    </td>
                                    <td>
                                        <%= links[i].addresshome %>
                                    </td>
                                    <td>
                                        <%= links[i].resultcovid %>
                                    </td>
                                    <td>sssss</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>

                

            </div>

        </div>
    </div>

</body>

</html>